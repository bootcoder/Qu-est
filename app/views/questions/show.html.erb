<p id="notice"><%= notice %></p>

<p>
  <strong>Body:</strong>
  <%= @question.body %>
</p>

<%= link_to 'Edit', edit_question_path(@question) %> |
<%= link_to 'Back', questions_path %>

<div>
	<h2>Choices</h2>
	<div>
		<ul>Correct Choices:
			<% @choices.each do |choice|  %>
				<% if choice.correct == true %>
				<li><%= link_to "#{choice.body}", choice_path(choice.id) %></li>
				<% end %>
			<% end %>
		</ul>
		<ul>Incorrect Choices:
			<% @choices.each do |choice|  %>
				<% if choice.correct == false %>
				<li><%= link_to "#{choice.body}", choice_path(choice.id) %></li>
				<% end %>
			<% end %>
		</ul>
	</div>
	<%= link_to("Create New Choice", new_choice_path(id: @question.id )) %>
</div>
