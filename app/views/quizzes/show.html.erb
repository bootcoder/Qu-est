<p id="notice"><%= notice %></p>

<p>
  <strong>Name:</strong>
  <%= @quiz.name %>
</p>

<%= link_to 'Edit', edit_quiz_path(@quiz) %> |
<%= link_to 'Back', course_path(session[:course_id]) %>

<div>
	<h2>Current Questions</h2>
	<% @questions.each do |question|  %>
		<h3><%= link_to "#{question.body}", question_path(question.id) %></h3>
	<% end %>
	<% session[:quiz_id] = @quiz.id %>
	<%= link_to("New Question", new_question_path(id: @quiz.id) ) %>
</div>