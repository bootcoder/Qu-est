<div class="row">
  <div class="new-course small-9 small-centered columns">
    <% if session[:type] == "teacher" %>
      <%= link_to 'New Course', new_course_path %>
    <% end %>
  </div>
</div>
<div class="solid-spacer"></div>

<% @courses.each do |course| %>
  <div class = "row">
    <div class="course small-9 small-centered columns">
      <%= link_to course.name, course_path(course) %><br>
    </div>
  </div>
  <div class="course-btn">
  <% if session[:type] == "teacher" %>
    <%= link_to 'Edit', edit_course_path(course), class: "edit-btn" %>
    <%= link_to 'Delete', course, method: :delete, data: { confirm: 'Are you sure?' }, class: "delete-btn" %>
  <% end %>
  </div>
  <br>
<% end %>
