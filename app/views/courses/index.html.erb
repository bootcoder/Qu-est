<% if session[:type] == "student" %>
  <h1>Listing Courses</h1>
  <table>
    <thead>
      <tr>
        <th>Name</th>
        <th colspan="3"></th>
      </tr>
    </thead>
    <tbody>
      <% @courses.each do |course| %>
        <tr>
          <td><%= link_to course.name, course_path(course) %></td>
          <td><%= button_to 'Drop Course', { controller: :students, action: "drop_class", id: course.id }, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
  <%= button_to "Register for new class.", classes_signup_path, method: "get" %> 
<% end %>
<% if session[:type] == "teacher" %>
  <h1>Listing Courses</h1>

  <table>
    <thead>
      <tr>
        <th>Name</th>
        <th>Description</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @courses.each do |course| %>
        <tr>
          <td><%= link_to course.name, course_path(course) %></td>
          <td></td>
          <td><%= course.description %></td>
          <td><%= link_to 'Edit', edit_course_path(course) %></td>
          <td><%= link_to 'Destroy', course, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <br>
  <%= link_to 'New Course', new_course_path %>
<% end %>
    